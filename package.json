{
	"name": "@forge42/base-stack",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"clean": "git clean -fdX --exclude=\"!.env\"",
		"execute": "tsx",
		"script": "npm run execute scripts/setup.ts",
		"cleanup": "npm run script scripts/cleanup.ts",
		"build": "remix vite:build",
		"dev": "remix vite:dev",
		"lint": "biome check .",
		"lint:ci": "biome ci .",
		"lint:fix": "biome check --write .",
		"start": "remix-serve ./build/server/index.js",
		"test": "vitest run",
		"test:ui": "vitest --ui --api 9527",
		"test:cov": "vitest run --coverage",
		"typecheck": "tsc",
		"validate": "npm run typecheck && npm run lint && npm run test && npm run knip",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip"
	},
	"dependencies": {
		"@remix-run/node": "^2.12.1",
		"@remix-run/react": "^2.12.1",
		"@remix-run/serve": "^2.12.1",
		"@remix-run/web-fetch": "^4.4.2",
		"clsx": "^2.1.1",
		"i18next": "^23.15.1",
		"i18next-browser-languagedetector": "^8.0.0",
		"i18next-fetch-backend": "^6.0.0",
		"i18next-fs-backend": "^2.3.2",
		"isbot": "^5.1.17",
		"pretty-cache-header": "^1.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^15.0.2",
		"remix-custom-routes": "^1.0.1",
		"remix-i18next": "^6.4.1",
		"tailwind-merge": "^2.5.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.2",
		"@remix-run/dev": "^2.12.1",
		"@types/node": "^22.6.1",
		"@types/prompt": "^1.1.9",
		"@types/react": "^18.3.8",
		"@types/react-dom": "^18.3.0",
		"@vitest/coverage-v8": "^2.1.1",
		"@vitest/ui": "^2.1.1",
		"autoprefixer": "^10.4.20",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"glob": "^11.0.0",
		"happy-dom": "^15.7.4",
		"knip": "^5.30.5",
		"lefthook": "^1.7.16",
		"postcss": "^8.4.47",
		"prompt": "^1.3.0",
		"remix-development-tools": "^4.6.0",
		"tailwindcss": "^3.4.13",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"vite": "^5.4.7",
		"vite-plugin-icons-spritesheet": "^2.2.1",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.1.1"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.22.4"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
