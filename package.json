{
	"name": "@forge42/base-stack",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"execute": "tsx",
		"script": "npm run execute scripts/setup.ts",
		"cleanup": "npm run script scripts/cleanup.ts",
		"postinstall": "npm run cleanup",
		"build": "remix vite:build",
		"dev": "remix vite:dev",
		"lint": "biome check .",
		"lint:ci": "biome ci .",
		"lint:fix": "biome check --write .",
		"start": "remix-serve ./build/server/index.js",
		"test": "vitest run",
		"test:ui": "vitest --ui --api 9527",
		"test:cov": "vitest run --coverage",
		"typecheck": "tsc",
		"validate": "npm run typecheck && npm run lint && npm run test && npm run knip",
		"prepare": "husky",
		"knip": "knip"
	},
	"dependencies": {
		"@remix-run/node": "^2.9.2",
		"@remix-run/react": "^2.9.2",
		"@remix-run/serve": "^2.9.2",
		"@remix-run/web-fetch": "^4.4.2",
		"clsx": "^2.1.0",
		"i18next": "^23.10.1",
		"i18next-browser-languagedetector": "^7.2.1",
		"i18next-fs-backend": "^2.3.1",
		"i18next-http-backend": "^2.5.0",
		"isbot": "^5.1.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^14.1.0",
		"remix-custom-routes": "^1.0.1",
		"remix-i18next": "^6.0.1",
		"tailwind-merge": "^2.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.1",
		"@remix-run/dev": "^2.9.2",
		"@types/node": "^20.12.4",
		"@types/prompt": "^1.1.8",
		"@types/react": "^18.2.74",
		"@types/react-dom": "^18.2.24",
		"@vitest/coverage-v8": "^1.4.0",
		"@vitest/ui": "^1.4.0",
		"autoprefixer": "^10.4.19",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"glob": "^10.3.12",
		"happy-dom": "^14.4.0",
		"husky": "^9.0.11",
		"knip": "^5.9.0",
		"postcss": "^8.4.38",
		"prompt": "^1.3.0",
		"remix-development-tools": "^4.2.0",
		"tailwindcss": "^3.4.3",
		"tsx": "^4.15.6",
		"typescript": "^5.4.5",
		"vite": "^5.2.8",
		"vite-plugin-icons-spritesheet": "^1.3.0",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.4.0"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.13.2"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
